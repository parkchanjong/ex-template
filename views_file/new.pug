doctype html
html
 head
  meta(charset='utf-8')
 body
  h1
    a(href='/topic') Server side js
  ul
    each topic in topics
        li
         a(href='/topic/'+topic)= topic
  article
  form(action='/topic' method='post')
   p
    input(type='text' name='title' placeholder='title')
   p
    textarea(name='description', cols='30', rows='10')
   p
    input(type='submit')
